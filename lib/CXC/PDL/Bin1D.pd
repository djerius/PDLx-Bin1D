sub read_code {
    my ( $routine ) = @_;

    my $file = catfile( LIBPATH, $routine );

    my $fh = IO::File->new( $file, 'r' )
      or die( "unable to open source file: $file\n" );

    return join('', $fh->getlines);
}

sub filter_code {

    my ( $handle_bad ) = shift;

    return join('',
                "#define HANDLE_BAD_VALUE $handle_bad\n",
                $_[0],
                "#undef HANDLE_BAD_VALUE\n" );
}
